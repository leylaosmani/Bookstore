extends layout 

block content 
    h1 Bookstore 

    each book in books

        label Title:

        a(href="/book/" + book._id)  book.title
        p Author: #{book.author}
        p Pages: #{book.pages}
        p Ratings: #{book.rating}
        p Genre: 
        ul 

        each genre in book.genres 
            li #{genre}

            br
            br